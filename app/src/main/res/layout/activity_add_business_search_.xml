<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorCardView"
    tools:context=".Activity.AddBusinessSearch_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Address Line 1"
                android:layout_margin="3dp"
                android:id="@+id/newaddline1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Address Line 2"
                android:id="@+id/newaddline2"
                android:enabled="false"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="City"
                android:layout_margin="3dp"
                android:enabled="false"
                android:id="@+id/newaddcity"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="State"
                android:enabled="false"
                android:layout_margin="3dp"
                android:id="@+id/newaddstate"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Country"
                android:enabled="false"
                android:id="@+id/newaddcountry"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Pin code"
                android:enabled="false"
                android:id="@+id/newaddpincode"/>

            <Button
                android:id="@+id/AddBusiness_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNewBlue"
                android:textColor="@color/colorWhite"
                android:text="Save"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>